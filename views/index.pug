extends layout

block content
  h1= title
  form(id='create_game')
    input(type='text', id='username', value="Player 1", name='username')
    button(type='submit' class='btn') Créer une partie

  form(id='join_game')
    input(type='text', id='code' name='code')
    button(type='submit' class='btn') Rejoindre une partie

  form(id='play')
    input(type='text', value="A1", id='c' name='c')
    input(type='text', value="A2", id='nc' name='nc')
    button(type='submit' class='btn') Bouger la pièce

  h3 Code:
    ul(id='codes')

  h3 Partie:
    ul(id='join')

  h3 Jeu:
  <div id="chessboard" class="chessboard">
    
  </div>
